<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        body {
            text-align: center;
            background-color: black;
            color: red;
        }

        input {
            height: 30px;
            width: 300px;
            color: red
        }

        label {
            font-size: 30px;
        }

        a {
            height: 30px;
            width: 50px;
            color: red;
            font-size: 35px;
        }

        button {
            height: 50px;
            width: 300px;
            color: red;
            font-size: 35px;
        }
        .recordar{
            display: flex;
            justify-content: center;
        }
    </style>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login</title>
</head>

<body>
    <header>

        <% if (locals.isLogged) { %>
            <div>
                <select name="HiUser" id="HiUser">
                    <option value="Hi">Hi Maty</option>
                    <option value="Logout">Logout</option>
                </select>

                <% } else { %>
                    <a href="/user/register">Registro</a>

                    <a href="/user/login">Login</a>
            </div>

            <% } %>

    </header>



    <form action="/user/login" class="form" method="POST">

        <label for="email" class="label">Email: </label>
        <input type="email" name="email" id="email" placeholder="Ingrese su Email"
            value="<%= locals.oldData ? oldData.email : null %>">
        <% if (locals.errors && errors.email) { %>
            <!--si existen errores Y el error esta en email-->
            <div class="text-danger">
                <!--la clase text danger pone la letra en rojo-->
                <%= errors.email.msg %>
            </div>

            <% } %>
                <br><br>

                <label for="password" class="label">Contraseña: </label>
                <input type="password" name="password" id="password" placeholder="Ingrese su Contraseña"
                    value="<%= locals.oldData ? oldData.password : null %>">
                <% if (locals.errors && errors.password) { %>
                    <!--si existen errores Y el error esta en password-->
                    <div class="text-danger">
                        <!--la clase text danger pone la letra en rojo-->
                        <%= errors.password.msg %>
                    </div>

                    <% } %>

                        <br><br><br>

                        <button type="submit"> Login </button>
                        <br><br><br>

                        <div class="recordar">
                            <label for="">
                                <input type="checkbox" name="remember_user" id=""> Recordar usuario
                            </label>
                        </div>
                        <br><br><br>
                        <button> <a href="/user/register">Registrar</a> </button>

    </form>
</body>

</html>